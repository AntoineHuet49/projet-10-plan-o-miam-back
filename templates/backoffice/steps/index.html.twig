{% extends 'base.html.twig' %}

{% block title %}Steps index{% endblock %}

{% block body %}
    <h1>Steps index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for step in steps %}
            <tr>
                <td>{{ step.id }}</td>
                <td>{{ step.text }}</td>
                <td>
                    <a href="{{ path('app_backoffice_steps_show', {'id': step.id}) }}">show</a>
                    <a href="{{ path('app_backoffice_steps_edit', {'id': step.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_steps_new') }}">Create new</a>
{% endblock %}
