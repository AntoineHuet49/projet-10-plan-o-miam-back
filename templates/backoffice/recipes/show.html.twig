{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
    <h1>Recipes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Steps</th>
                <td>{{ recipe.steps }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ recipe.rating }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ recipe.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_recipes_index') }}">back to list</a>

    <a href="{{ path('app_backoffice_recipes_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('backoffice/recipes/_delete_form.html.twig') }}
{% endblock %}
